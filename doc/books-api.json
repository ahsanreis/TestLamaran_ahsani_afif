{
    "openapi":"3.0.3",
    "info": {
      "title":"Books Api",
      "version":"1.0"
    },
    "servers": [
      {"url":"https://localhost:8000"}
    ],
    "paths": {
        "/api/books":{
            "get" : {
                "description": "Get all books",
                "parameters" : [
                    {
                        "name" : "page",
                        "in" : "query"
                    },
                    {
                        "name" : "size",
                        "in" : "query"
                    }
                ],
