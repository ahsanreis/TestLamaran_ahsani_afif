                    "content": {
                        "application/json": {
                            "schema": {
                                "type" : "object",
                                "required": [
                                    "title"
                                ],
                                "properties": {
                                    "title":{
                                        "type": "string"
                                    },
                                    "description": {
                                        "type": "string"
                                    },
                                    "publish_date": {
                                        "type": "number"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201" : {
                        "description": "Successfully Create a new book",
                        "content": {
                            "application/json": {
                                "schema" : {
                                    "type": "object",
                                    "properties": {
                                        "data": {
                                            "type": "object",
                                            "properties": {
                                                "id" : {
                                                    "type": "number"
                                                },
                                                "title": {
                                                    "type": "string"
